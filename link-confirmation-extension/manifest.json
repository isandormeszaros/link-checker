{
    "manifest_version": 2,
    "name": "Link Confirmation",
    "version": "1.0",
    "description": "Ask for confirmation before opening links",
    "permissions": [
      "activeTab"
    ],
    "browser_action": {
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      },
      "default_title": "Link Confirmation"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
  }
  